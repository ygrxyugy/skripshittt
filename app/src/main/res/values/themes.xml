<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Allam" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/warna1</item>
    </style>

    <style name="Theme.Allam" parent="Base.Theme.Allam" />

    //toolbar
    <style name="toolbar" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/putih</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Toolbar2" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/warna2</item>
        <item name="android:shadowRadius">-0</item>
        <item name="theme">@style/Base.Theme.Allam</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/toolbar</item>
    </style>
</resources>